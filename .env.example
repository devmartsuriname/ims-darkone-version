# Supabase Configuration
VITE_SUPABASE_PROJECT_ID="your-project-id"
VITE_SUPABASE_PUBLISHABLE_KEY="your-anon-key"
VITE_SUPABASE_URL="https://your-project-id.supabase.co"

# Build Version (Increment on each production deployment)
VITE_BUILD_VERSION=0.15.6

# ============================================
# LOGGING CONFIGURATION (v0.15.6+)
# ============================================

# Global log level (debug, info, warn, error)
# Production: error | Development: info | Debugging: debug
VITE_LOG_LEVEL=info

# Group-specific logging (true/false)
# Enable only groups needed for current debugging session

# Authentication flow logging
# Tracks: session initialization, user data fetch, role assignments, timeouts
VITE_LOG_AUTH=true

# Route protection logging
# Tracks: protected route checks, redirects, access control
VITE_LOG_ROUTE=true

# System setup logging
# Tracks: initial setup, admin creation, system configuration
VITE_LOG_SETUP=true

# Workflow state logging
# Tracks: application state transitions, workflow validations, SLA monitoring
VITE_LOG_WORKFLOW=false

# Cache management logging
# Tracks: cache hits/misses, version synchronization, invalidation
VITE_LOG_CACHE=false

# System-level logging
# Tracks: error boundaries, recovery UI, critical system events
VITE_LOG_SYSTEM=true

# ============================================
# RECOMMENDED LOGGING CONFIGURATIONS
# ============================================

# LOCAL DEVELOPMENT
# VITE_LOG_LEVEL=debug
# VITE_LOG_AUTH=true
# VITE_LOG_ROUTE=true
# VITE_LOG_SETUP=true
# VITE_LOG_WORKFLOW=true
# VITE_LOG_CACHE=true
# VITE_LOG_SYSTEM=true

# STAGING ENVIRONMENT
# VITE_LOG_LEVEL=info
# VITE_LOG_AUTH=true
# VITE_LOG_ROUTE=false
# VITE_LOG_SETUP=false
# VITE_LOG_WORKFLOW=false
# VITE_LOG_CACHE=false
# VITE_LOG_SYSTEM=true

# PRODUCTION ENVIRONMENT
# VITE_LOG_LEVEL=error
# VITE_LOG_AUTH=false
# VITE_LOG_ROUTE=false
# VITE_LOG_SETUP=false
# VITE_LOG_WORKFLOW=false
# VITE_LOG_CACHE=false
# VITE_LOG_SYSTEM=false

# ============================================
# DEBUGGING SPECIFIC ISSUES
# ============================================

# Auth Issues (infinite loading, login failures)
# VITE_LOG_LEVEL=debug
# VITE_LOG_AUTH=true
# VITE_LOG_SYSTEM=true

# Route/Permission Issues
# VITE_LOG_LEVEL=debug
# VITE_LOG_AUTH=true
# VITE_LOG_ROUTE=true

# Performance Issues
# VITE_LOG_LEVEL=info
# VITE_LOG_CACHE=true
# VITE_LOG_WORKFLOW=true

# ============================================
# NOTES
# ============================================
# - Logs are filtered client-side only (no server impact)
# - Timestamp format: [HH:MM:SS.mmm] [GROUP] message
# - Disable all logs in production for performance
# - Use browser DevTools console filtering for further refinement
# - Log groups can be toggled at runtime via log.setGroup(group, enabled)
